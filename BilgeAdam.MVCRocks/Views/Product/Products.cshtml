@model ProductListViewModel
<h1>Ürünler</h1>

<div class="row">
    <div class="col-3">
        @await Component.InvokeAsync("Categories")
    </div>
    <div class="col-9">
        <a class="btn btn-primary" asp-action="New" asp-controller="Product">Yeni Ürün</a>
        @if (Model.IsEmpty)
        {
            <div class="alert alert-warning" role="alert">Bu görünümde bir ürün bulunamadı</div>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Türü</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Items)
                    {
                        <tr>
                            <td>@p.Name</td>
                            <td>@p.Category</td>
                            <td>@p.Price</td>
                            <td>@p.Stock</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

