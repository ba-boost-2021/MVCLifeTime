@model NewProductViewModel
<h3>Yeni Ürün Tanımı</h3>
<form asp-action="New" asp-controller="Product" method="post">
    <div class="row">
        <div class="col-6">
            <div class="mb-3">
                <label class="form-label">Ürün Adı</label>
                @Html.TextBoxFor(i => i.Name, new { @class = "form-control"})
            </div>
        </div>
        <div class="col-6">
            <div class="mb-3">
                <label class="form-label">Fiyatı</label>
                <input type="text" asp-for="Price" class="form-control">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="mb-3">
                <label class="form-label">Kategorisi</label>
                <vc:drop-down url="/category/options" property="CategoryId"></vc:drop-down>
            </div>
        </div>
        <div class="col-6">
            <div class="mb-3">
                <label class="form-label">Tedarikçisi</label>
                @await Component.InvokeAsync("DropDown", new { url = "/supplier/options", property = nameof(Model.SupplierId) } )
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="mb-3">
                <label class="form-label">Stok Miktarı</label>
                <input type="text" asp-for="Stock" class="form-control">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <button class="btn btn-primary" type="submit">Kaydet</button>
        </div>
    </div>
</form>